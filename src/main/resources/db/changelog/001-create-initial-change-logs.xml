<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1763480785082-1" author="mykytasirobaba">
        <createTable tableName="ai_analysis">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_ai_analysis"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="analysis_text" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="goal_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1763480785082-2" author="mykytasirobaba">
        <createTable tableName="goals">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_goals"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="difficulty" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="deadline" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="solved_at" type="DATE"/>
            <column name="estimated_hours" type="INT"/>
            <column name="is_completed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1763480785082-3" author="mykytasirobaba">
        <createTable tableName="progress_logs">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_progress_logs"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="log_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="minutes_spent" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="VARCHAR(1000)"/>
            <column name="goal_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1763480785082-4" author="mykytasirobaba">
        <createTable tableName="subgoals">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_subgoals"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
            <column name="difficulty" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_completed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="estimated_hours" type="INT"/>
            <column name="goal_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1763480785082-5" author="mykytasirobaba">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="refresh_token_key" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="two_factor_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="two_factor_secret" type="VARCHAR(255)"/>
            <column name="provider" type="VARCHAR(255)"/>
            <column name="provider_id" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1763480785082-6" author="mykytasirobaba">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="1763480785082-7" author="mykytasirobaba">
        <addUniqueConstraint columnNames="username" constraintName="uc_users_username" tableName="users"/>
    </changeSet>
    <changeSet id="1763480785082-8" author="mykytasirobaba">
        <addForeignKeyConstraint baseColumnNames="goal_id" baseTableName="ai_analysis"
                                 constraintName="FK_AI_ANALYSIS_ON_GOAL" referencedColumnNames="id"
                                 referencedTableName="goals"/>
    </changeSet>
    <changeSet id="1763480785082-9" author="mykytasirobaba">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="goals" constraintName="FK_GOALS_ON_USER"
                                 referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="1763480785082-10" author="mykytasirobaba">
        <addForeignKeyConstraint baseColumnNames="goal_id" baseTableName="progress_logs"
                                 constraintName="FK_PROGRESS_LOGS_ON_GOAL" referencedColumnNames="id"
                                 referencedTableName="goals"/>
    </changeSet>
    <changeSet id="1763480785082-11" author="mykytasirobaba">
        <addForeignKeyConstraint baseColumnNames="goal_id" baseTableName="subgoals" constraintName="FK_SUBGOALS_ON_GOAL"
                                 referencedColumnNames="id" referencedTableName="goals"/>
    </changeSet>

</databaseChangeLog>